@model MovieWebsite.Application.Models.VMs.FilmVMs.FilmDetailVM
@{
    ViewData["Title"] = "Film Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <img class="card-img-top" src="@Model.ImagePath" alt="@Model.Title" />
        <div class="card-body">
            <h2 class="card-title text-center">@Model.Title</h2>
            <p class="card-text">@Model.Description</p>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <partial name="UserFilmLikeButtons" model="new UserFilmLikeVM
                {
                    FilmId = Model.FilmId,
                    Liked = Model.Liked,
                    Disliked = Model.Disliked
                }" />
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>
