@model MovieWebsite.Application.Models.VMs.FilmVMs.FilmVM
@{
    ViewData["Title"] = "GetFilmDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        width: 24rem;
        height: auto;
        border-radius: 10px;
        overflow: hidden;
        cursor: pointer;
        position: relative;
        color: rgb(240, 240, 240);
        box-shadow: 0 10px 30px 5px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #333;
    }

        .card img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

    .card-content {
        padding: 20px;
        text-align: center;
    }

        .card-content h2 {
            margin-bottom: 10px;
            font-family: 'Roboto Condensed', sans-serif;
            font-weight: normal;
            text-transform: uppercase;
            color: gray;
        }

        .card-content p {
            margin-bottom: 20px;
            color: white;
        }

    
</style>

<main>
    <div class="card">
        <img src="@Model.ImagePath" alt="@Model.Title">
        <div class="card-content">
            <h2>
                @Html.DisplayFor(model => model.Title)
            </h2>
            <p>
                @Html.DisplayFor(model => model.Description)
            </p>

            <partial name="UserFilmLikeButtons" model="new UserFilmLikeVM
            {
                FilmId = Model.Id,
                Disliked = false
            }" />

            <a asp-action="Index" class="button">
                Back to List
                <span class="material-symbols-outlined"></span>
            </a>
        </div>
    </div>
</main>