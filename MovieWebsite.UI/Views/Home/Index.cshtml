@model IEnumerable<MovieWebsite.Application.Models.VMs.FilmVMs.FilmVM>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>MovieHunter</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/moviehunter/css/style.css" type="text/css" media="all" />
    <script type="text/javascript" src="~/moviehunter/js/jquery-1.4.2.min.js"></script>
    <script type="text/javascript" src="/moviehunter/js/jquery-func.js"></script>
    <link rel="stylesheet" href="~/moviehunter/css/ie6.css" type="text/css" media="all" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/8e1b0b6f3d.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        #header {
            color: #fff;
        }

        #logo {
            font-size: 2em;
        }

        .social ul {
            list-style: none;
            padding: 0;
        }

            .social ul li {
                display: inline;
                margin-right: 10px;
            }

        #navigation ul {
            list-style: none;
            padding: 0;
        }

            #navigation ul li {
                display: inline;
                margin-right: 15px;
            }

        .card {
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            padding: 0;
            cursor: pointer;
            overflow: hidden;
            position: relative;
            width: 200px; /* Kart boyutunu ayarlayın */
            height: 300px; /* Kart boyutunu ayarlayın */
        }

            .card img {
                width: 100%;
                height: 100%; /* Resim boyutunu ayarlayın */
                object-fit: cover;
                transition: opacity 0.3s ease-in-out;
            }

        .card-body {
            padding: 15px;
            text-align: center; /* Metni ortalamak için */
        }

        .card-title {
            font-size: 1.1em;
            margin-top: 10px;
        }

        .card:hover img {
            opacity: 0.3; /* Resmin opaklığını azaltmak için */
        }

        .card:hover:before {
            content: '';
            background-image: url('/moviehunter/css/images/image-hover.png');
            background-size: cover; /* Arkaplan resmini kaplayacak şekilde ayarlayın */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 1;
            pointer-events: none;
        }

        #footer {
            background: #333;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

        .d-none {
            display: none;
        }
    </style>
</head>
<body>
    <!-- START PAGE SOURCE -->
    <div id="shell">
        <div id="header">
            <h1 id="logo"><a href="#">MovieHunter</a></h1>
            <div class="social">
                <span>FOLLOW US ON:</span>
                <ul>
                    <li><a class="twitter" href="#">twitter</a></li>
                    <li><a class="facebook" href="#">facebook</a></li>
                    <li><a class="vimeo" href="#">vimeo</a></li>
                    <li><a class="rss" href="#">rss</a></li>
                </ul>
            </div>
            <div id="navigation">
                <ul>
                    <li><a class="active" href="#">HOME</a></li>
                    <li><a href="#">NEWS</a></li>
                    <li><a href="#">IN THEATERS</a></li>
                    <li><a href="#">COMING SOON</a></li>
                    <li><a href="#">CONTACT</a></li>
                    <li><a href="#">ADVERTISE</a></li>
                </ul>
            </div>
            <div id="sub-navigation">
                <ul>
                    <li><a href="#">SHOW ALL</a></li>
                    <li><a href="#">LATEST TRAILERS</a></li>
                    <li><a href="#">TOP RATED</a></li>
                    <li><a href="#">MOST COMMENTED</a></li>
                </ul>
                <div id="search">
                    <form action="#" method="get" accept-charset="utf-8">
                        <label for="search-field">SEARCH</label>
                        <input type="text" name="search field" value="Enter search here" id="search-field" class="blink search-field" />
                        <input type="submit" value="GO!" class="search-button" />
                    </form>
                </div>
            </div>
        </div>
        <div id="main" class="container mt-4">
            @if (Model != null && Model.Count() > 0)
            {
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <a href="@Url.Action("GetFilmDetails", "Home", new { id = item.Id })">
                                <div class="card">
                                    <img src="@item.ImagePath" class="card-img-top" alt="@item.Title">
                                    
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    No films found.
                </div>
            }
        </div>
       
        
    </div>
    <!-- END PAGE SOURCE -->
</body>
</html>
