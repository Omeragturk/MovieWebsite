@model MovieWebsite.Application.Models.DTOs.UserDtos.LoginDto

@{
    ViewData["Title"] = "Login";
    
}


    
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    

    <div class="container mt-5">
        <div class="card p-4 shadow-sm" style="border-radius: 40px; max-width: 400px; margin: auto; background: linear-gradient(0deg, #fff, #f4f7fb);">
            <div class="card-header text-center border-0">
                <h2 class="text-primary">Sinema Dünyası</h2>
                <p class="text-muted">Sıgn In.</p>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="fas fa-user text-primary"></i></span>
                            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adınızı girin" required style="border-radius: 20px;" />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="fas fa-lock text-primary"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin" required style="border-radius: 20px;" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100 mt-3" style="border-radius: 20px;">Giriş Yap</button>
                </form>
            </div>
            <div class="text-center mt-3">
                <span class="text-muted small">Ya da sosyal hesaplarınızla giriş yapın:</span>
                <div class="d-flex justify-content-center gap-3 mt-2">
                    <button class="btn btn-outline-secondary rounded-circle p-2" style="width: 40px; height: 40px;">
                        <i class="fab fa-google"></i>
                    </button>
                    <button class="btn btn-outline-secondary rounded-circle p-2" style="width: 40px; height: 40px;">
                        <i class="fab fa-apple"></i>
                    </button>
                    <button class="btn btn-outline-secondary rounded-circle p-2" style="width: 40px; height: 40px;">
                        <i class="fab fa-twitter"></i>
                    </button>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="#" class="text-primary small">Kullanıcı Lisans Sözleşmesini İnceleyin</a>
            </div>
        </div>
    </div>
