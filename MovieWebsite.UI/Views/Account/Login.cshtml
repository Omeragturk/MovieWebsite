@model MovieWebsite.Application.Models.DTOs.UserDtos.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link rel="stylesheet" href="~/css/login.css"/>
<div class="login-card">
    <h2>Sinema Dünyası</h2>
    <p>Hesabınıza giriş yapın</p>
    <form asp-action="Login" method="post">
        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" required />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
    </form>
    <p class="mt-4">Veya sosyal medya hesaplarınızla giriş yapın:</p>    
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary w-100">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
    <div class="d-flex justify-content-center gap-3 social-login">
        <button class="btn"><i class="fab fa-google"></i></button>
        <button class="btn"><i class="fab fa-facebook"></i></button>
        <button class="btn"><i class="fab fa-twitter"></i></button>
    </div>
</div>
