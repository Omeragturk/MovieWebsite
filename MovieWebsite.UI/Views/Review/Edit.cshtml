@model MovieWebsite.Application.Models.DTOs.ReviewDtos.UpdateReviewDto

@{
    ViewData["Title"] = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
<style>
    body {
        font-family: 'Arial', sans-serif;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        font-weight: bold;
        margin-bottom: 20px;
    }

    form {
        max-width: 600px;
        margin: 0 auto;
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    label {
        font-weight: bold;
        margin-top: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #ccc;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
    }

    button {
        width: 48%;
        margin: 5px 1%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
    }

    .btn-secondary {
        background-color: #95a5a6;
        color: white;
    }

    button:hover {
        opacity: 0.9;
    }

    .rating-container {
        display: flex;
        align-items: center;
    }

    .stars i {
        font-size: 24px;
        margin-right: 5px;
        cursor: pointer;
        color: #ddd;
    }

    .stars i.filled {
        color: #FFD700; /* Gold for filled stars */
    }

    .text-danger {
        color: red;
    }
</style>

<h2>Edit Your Review</h2>

<form asp-action="Edit" asp-controller="Review" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId"/>

    <div class="form-group">
        <label asp-for="FilmId">Select Film</label>
        <select asp-for="FilmId" class="form-control" asp-items="ViewBag.Films"></select>
        <span asp-validation-for="FilmId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text">Your Review</label>
        <textarea asp-for="Text" class="form-control" rows="5" placeholder="Share your thoughts..."></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Rating</label>
        <div class="rating-container">
            <div class="stars" id="starRating">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="fa fa-star" data-value="@i"></i>
                }
            </div>
            <input type="hidden" asp-for="Rating" />
        </div>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script>
    // Interactive Star Rating
    document.addEventListener("DOMContentLoaded", () => {
        const stars = document.querySelectorAll("#starRating i");
        const ratingInput = document.querySelector("input[name='Rating']");

        stars.forEach((star) => {
            star.addEventListener("mouseover", function () {
                const value = parseInt(this.getAttribute("data-value"));
                stars.forEach((s, i) => {
                    s.classList.toggle("filled", i < value);
                });
            });

            star.addEventListener("click", function () {
                const value = parseInt(this.getAttribute("data-value"));
                ratingInput.value = value;
            });
        });
    });
</script>
