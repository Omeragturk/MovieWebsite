@model MovieWebsite.Application.Models.DTOs.ReviewDtos.UpdateReviewDto

@{
    ViewData["Title"] = "DeleteConfirmed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Delete Review</h1>

<p>Are you sure you want to delete this review?</p>

<div>
    <strong>Film:</strong> @Model.Film.Title <br />
    <strong>User:</strong> @Model.User.UserName <br />
    <strong>Rating:</strong> @Model.Rating <br />
    <strong>Text:</strong> @Model.Text
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Review")" class="btn btn-secondary">Cancel</a>
</form>

