@model CreateReviewDto
@{
    ViewBag.Title = "Yorum Ekle";
}

<h2>Yorum Ekle</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-controller="Review"  asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FilmId">Film</label>
        <select asp-for="FilmId" class="form-control" asp-items="ViewBag.Films"></select>
        @Html.ValidationMessageFor(m => m.FilmId, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Rating">Puan</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="10" />
        @Html.ValidationMessageFor(m => m.Rating, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Text">Yorum</label>
        <textarea asp-for="Text" class="form-control" rows="5"></textarea>
        @Html.ValidationMessageFor(m => m.Text, null, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Yorum Ekle</button>
</form>
