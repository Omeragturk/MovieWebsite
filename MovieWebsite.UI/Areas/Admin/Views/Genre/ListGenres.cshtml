@model IEnumerable<MovieWebsite.Application.Models.VMs.GenreVM.GenreVM>

@{
    ViewData["Title"] = "ListGenres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table-hover tbody tr:hover {
        backgrou ba background-color: #f8f9fa;
        tran transition: background-color 0.3s ease;
    }

    }

    .btn-primary {
        backg background-color: #007bff;
        bo border: none;
    }

    .btn-danger {
        backgr background-color: #dc3545;
