@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<UserDto>

<div class="container-fluid px-4">
    <h1 class="mt-4">Panel</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Panel</li>
    </ol>
    <div class="row"></div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>E-Mail Adress</th>
                        <th>Create Date</th>
                        <th>Status</th>
                        <th>Role</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.CreateDate.ToString("dd/MM/yyyy")</td>
                            <td>@user.Status</td>
                            <td>@user.Role</td>
                            <td><img src="@user.ImagePath" alt="User Image" width="50" height="50" class="rounded-circle" /></td>
                            <td>
                                <form asp-area="" asp-controller="Account" asp-action="UpdateUserStatus" method="post" class="d-inline">
                                    <input type="hidden" name="userName" value="@user.UserName" />
                                    <input type="hidden" name="status" value="@(user.Status == MovieWebsite.Domain.Enums.Status.Active ? "Passive" : "Active")" />
                                    <button type="submit" class="btn btn-@(user.Status == MovieWebsite.Domain.Enums.Status.Active ? "danger" : "success")">@user.Status == MovieWebsite.Domain.Enums.Status.Active ? "Passive" : "Active"</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
