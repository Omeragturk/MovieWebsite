@{
    ViewData["Title"] = "User Management";
}

@model IEnumerable<UserDto>

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="text-primary"><i class="fas fa-users me-2"></i>User Management Panel</h1>
        <button class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle me-1"></i>Add New User
        </button>
    </div>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-3 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Management</li>
        </ol>
    </nav>

    <!-- User Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-table me-2"></i>User List</h5>
            <button class="btn btn-light btn-sm">
                <i class="fas fa-sync-alt me-1"></i>Refresh
            </button>
        </div>
        <div class="card-body">
            <table id="userTable" class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>User Name</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Address</th>
                        <th>Create Date</th>
                        <th>Status</th>
                        <th>Role</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.CreateDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge rounded-pill bg-@(user.Status == MovieWebsite.Domain.Enums.Status.Active ? "success" : "secondary") px-3 py-2">
                                    <i class="fas @(user.Status == MovieWebsite.Domain.Enums.Status.Active ? "fa-check-circle" : "fa-ban") me-1"></i>
                                    @user.Status
                                </span>
                            </td>
                            <td>@user.Role</td>
                            <td>
                                <img src="@user.ImagePath" alt="User Image" width="50" height="50" class="rounded-circle border border-secondary" />
                            </td>
                            <td>
                                <form asp-area="" asp-controller="Account" asp-action="UpdateUserStatus" method="post" class="d-inline">
                                    <input type="hidden" name="userName" value="@user.UserName" />
                                    <input type="hidden" name="status" value="@(user.Status == MovieWebsite.Domain.Enums.Status.Active ? "Passive" : "Active")" />
                                    <button type="submit" class="btn btn-sm btn-@(user.Status == MovieWebsite.Domain.Enums.Status.Active ? "outline-danger" : "outline-success")">
                                        <i class="fas @(user.Status == MovieWebsite.Domain.Enums.Status.Active ? "fa-user-times" : "fa-user-check") me-1"></i>
                                        @user.Status == MovieWebsite.Domain.Enums.Status.Active ? "Deactivate" : "Activate"
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- DataTables Initialization -->
<script>
    $(document).ready(function () {
        $('#userTable').DataTable({
            "responsive": true,
            "autoWidth": false,
            "pageLength": 10,
            "language": {
                "search": "Search:",
                "lengthMenu": "Show _MENU_ entries"
            }
        });
    });
</script>
