@model MovieWebsite.Application.Models.DTOs.FilmDTos.UpdateFilmDto

@{
    ViewData["Title"] = "Edit Film";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow-sm bg-light">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Hidden Id Field -->
            <input type="hidden" asp-for="Id" />

            <!-- Film Title -->
            <div class="form-group mb-4">
                <label asp-for="Title" class="form-label"><strong>Title</strong></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-4">
                <label asp-for="Description" class="form-label"><strong>Description</strong></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Upload Image -->
            <div class="form-group mb-4">
                <label asp-for="UpLoadPath" class="form-label"><strong>Image</strong></label>
                <input asp-for="UpLoadPath" class="form-control" type="file" />
                <span asp-validation-for="UpLoadPath" class="text-danger"></span>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-3">
                        <img src="@Model.ImagePath" alt="@Model.Title" class="img-thumbnail" style="width: 150px; height: auto;" />
                    </div>
                }
            </div>

            <!-- Genre Selection -->
            <div class="form-group mb-4">
                <label asp-for="GenreId" class="form-label"><strong>Genre</strong></label>
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>

            <!-- Genre Name -->
            <div class="form-group mb-4">
                <label asp-for="GenreName" class="form-label"><strong>Genre Name</strong></label>
                <input asp-for="GenreName" class="form-control" readonly />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>

            <!-- Submit Buttons -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary me-2 px-4">Save</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
