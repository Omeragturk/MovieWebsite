@model MovieWebsite.Application.Models.DTOs.FilmDTos.UpdateFilmDto

@{
    ViewData["Title"] = "Edit Film";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-lg mt-4">
    <div class="card-header bg-primary text-white">
        <h2 class="card-title mb-0">Edit Film</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-4">
                <label asp-for="Title" class="form-label fw-bold">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter film title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-bold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter film description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="UpLoadPath" class="form-label fw-bold">Image</label>
                <input asp-for="UpLoadPath" class="form-control" type="file" />
                <span asp-validation-for="UpLoadPath" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-3">
                        <img src="@Model.ImagePath" alt="@Model.Title" class="img-thumbnail shadow" style="width: 200px;" />
                    </div>
                }
            </div>

            <div class="mb-4">
                <label asp-for="GenreId" class="form-label fw-bold">Genre</label>
                <select asp-for="GenreId" class="form-select" asp-items="ViewBag.Genres">
                    <option value="">Select a genre</option>
                </select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success px-4">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
