@model IEnumerable<MovieWebsite.Application.Models.VMs.FilmVMs.FilmVM>

@{
    ViewData["Title"] = "Films";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    <style >
    table tbody tr:hover {
        background-color: #2b2b3c; /* Hover'da satırın arka planı değişir */
        transition: background-color 0.3s ease;
    }

    a.btn {
        transition: all 0.3s ease;
    }

        a.btn:hover {
            transform: scale(1.1); /* Hover sırasında buton hafif büyür */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }
</style>

</style>
<div class="container mt-4">
    <!-- Sayfa başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold">Films</h1>
        <a class="btn btn-success btn-lg d-flex align-items-center" asp-action="Create">
            <i class="bi bi-plus-lg me-2"></i> Create New
        </a>
    </div>

    <!-- Tablo -->
    <div class="table-responsive">
        <table class="table table-hover border rounded-3 shadow" style="background-color: #1e1e2f;">
            <thead style="background-color: #343a40; color: white;">
                <tr>
                    <!-- ID gizleniyor -->
                    <th >@Html.DisplayNameFor(model => model.Id)</th>
                    <th class="text-center">Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td >@item.Id</td>
                        <td class="text-center">
                            <img src="@item.ImagePath" alt="@item.Title" class="img-thumbnail rounded shadow-sm" style="width: 80px; height: auto;">
                        </td>
                        <td class="fw-bold text-white">@Html.DisplayFor(modelItem => item.Title)</td>
                        <td class="text-truncate text-white" style="max-width: 200px;">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="text-white">@Html.DisplayFor(modelItem => item.GenreName)</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary btn-sm d-flex align-items-center" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                                <a class="btn btn-outline-info btn-sm d-flex align-items-center" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye me-1"></i> Details
                                </a>
                                <a class="btn btn-outline-danger btn-sm d-flex align-items-center" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
