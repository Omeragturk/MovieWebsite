@model IEnumerable<MovieWebsite.Application.Models.VMs.UserFilmLikeViewModels.UserFilmLikeVM>

@{
    ViewData["Title"] = "Disliked Films";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .disliked-films-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
    }

    .film-card {
        flex: 1 1 calc(33.333% - 20px);
        background-color: #fdf2f2;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.3s;
    }

        .film-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .film-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

    .film-card-content {
        padding: 15px;
        text-align: left;
    }

        .film-card-content h3 {
            font-size: 1.1rem;
            font-weight: bold;
            color: #b21f2d;
        }

        .film-card-content p {
            font-size: 0.9rem;
            color: #444;
            margin: 5px 0 15px;
        }

    .btn-remove {
        background-color: #f05454;
        color: white;
        padding: 8px 10px;
        font-size: 14px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-remove:hover {
            background-color: #c73e3e;
        }
</style>

<h2 class="text-center">Disliked Films</h2>

@if (!Model.Any())
{
    <p class="text-center mt-4">Henüz beğenmediğiniz bir film bulunmamaktadır.</p>
}
else
{
    <div class="disliked-films-container">
        @foreach (var film in Model)
        {
            <div class="film-card">
                <img src="@film.Films.FirstOrDefault()?.ImagePath" alt="@film.Films.FirstOrDefault()?.Title" />
                <div class="film-card-content">
                    <h3>@film.Films.FirstOrDefault()?.Title</h3>
                    <p>@film.Films.FirstOrDefault()?.Description</p>
                    <form asp-action="RemoveDislike" asp-controller="UserFilmLike" asp-area="Admin" method="post">
                        <input type="hidden" name="filmId" value="@film.FilmId" />
                        <button type="submit" class="btn-remove">
                            <i class="fas fa-times"></i> Beğenmekten Vazgeç
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
}
