@model IEnumerable<MovieWebsite.Application.Models.VMs.UserFilmLikeViewModels.UserFilmLikeVM>

@{
    ViewData["Title"] = "Disliked Films";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
   

    h2.text-center {
        font-size: 2rem;
        margin-bottom: 30px;
        color: #ffd700;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    }

    .disliked-films-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .film-card {
        position: relative;
        flex: 1 1 calc(25% - 20px);
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .film-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
        }

        .film-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-bottom: 2px solid #ffd700;
        }

    .film-card-content {
        padding: 15px;
        text-align: center;
    }

        .film-card-content h3 {
            font-size: 1.3rem;
            font-weight: 600;
            color: #ffd700;
            margin-bottom: 10px;
        }

        .film-card-content p {
            font-size: 1rem;
            color: #ddd;
            margin-bottom: 15px;
        }

    .btn-remove {
        background: linear-gradient(45deg, #ff4b2b, #ff416c);
        color: #fff;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-remove:hover {
            background: linear-gradient(45deg, #ff416c, #ff4b2b);
            box-shadow: 0 0 10px #ff416c, 0 0 40px #ff4b2b;
        }

    .no-films-message {
        font-size: 1.2rem;
        color: #fff;
        text-align: center;
        margin-top: 30px;
        background: rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
</style>

<h2 class="text-center">Disliked Films</h2>

@if (!Model.Any())
{
    <p class="no-films-message">Henüz beğenmediğiniz bir film bulunmamaktadır.</p>
}
else
{
    <div class="disliked-films-container">
        @foreach (var film in Model)
        {
            <div class="film-card">
                <img src="@film.Films.FirstOrDefault()?.ImagePath" alt="@film.Films.FirstOrDefault()?.Title" />
                <div class="film-card-content">
                    <h3>@film.Films.FirstOrDefault()?.Title</h3>
                    <p>@film.Films.FirstOrDefault()?.Description</p>
                    <form asp-action="RemoveDislike" asp-controller="UserFilmLike" asp-area="Admin" method="post">
                        <input type="hidden" name="filmId" value="@film.FilmId" />
                        <button type="submit" class="btn-remove">
                            <i class="fas fa-times"></i> Beğenmekten Vazgeç
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
}

